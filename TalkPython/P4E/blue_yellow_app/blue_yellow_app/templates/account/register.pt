<div metal:use-macro="view.layout">
    <div metal:fill-slot="main_content">

        <h1>Create an account</h1>

        <form class="standard-form" action="" method="POST">
            <input name="email" type="text" value="" placeholder="email address"><br>
            <input name="password" type="password" value="" placeholder="password"><br>
            <input name="confirm_password" type="password" value="" placeholder="confirm password"><br>
            <button type="submit">Register</button>
        </form>

    </div>
</div>